<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rowProductConatiner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/row_background_stroke">

    <ImageButton
        android:id="@+id/cartRowDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cartRowProductImage"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@color/app_grey_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cartRowProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd= "32dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:includeFontPadding="false"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/cartRowDeleteButton"
        app:layout_constraintTop_toTopOf="@id/cartRowProductImage"
        app:layout_constraintStart_toEndOf="@id/cartRowProductImage"
        tools:text = "Product Name"/>

    <TextView
        android:id="@+id/cartRowProductCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:text="Category: "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/cartRowProductName"
        app:layout_constraintTop_toBottomOf="@id/cartRowProductName" />

    <TextView
        android:id="@+id/cartRowProductCategoryDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd= "32dp"
        app:layout_constraintEnd_toStartOf="@id/cartRowDeleteButton"
        app:layout_constraintStart_toEndOf="@id/cartRowProductCategoryLabel"
        app:layout_constraintTop_toTopOf="@id/cartRowProductCategoryLabel"
        tools:text="Clothes" />

    <TextView
        android:id="@+id/cartRowProductCategoryPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:text="Price: "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/cartRowProductImage"
        app:layout_constraintStart_toStartOf="@id/cartRowProductCategoryLabel" />

    <TextView
        android:id="@+id/cartRowProductCategoryPriceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd= "32dp"
        app:layout_constraintEnd_toStartOf="@id/cartRowDeleteButton"
        app:layout_constraintStart_toEndOf="@id/cartRowProductCategoryPriceLabel"
        app:layout_constraintTop_toTopOf="@id/cartRowProductCategoryPriceLabel"
        tools:text="12.34$" />

</androidx.constraintlayout.widget.ConstraintLayout>