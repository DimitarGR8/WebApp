<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_product_screen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/productTitleBorder"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/app_grey_stroke"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/productTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/productDeleteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/green_button"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Delete product"
        android:textColor="@color/app_white"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/productBackButton"
        app:layout_constraintStart_toStartOf="@id/productDateAddedLabel"
        app:layout_constraintTop_toBottomOf="@id/productDateAdded"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.3" />

    <Button
        android:id="@+id/productBackButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_button"
        android:text="Back"
        android:textColor="@color/app_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/productSaveNewDataButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productDateAdded"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/productSaveNewDataButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Save new changes"
        android:textColor="@color/app_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/productBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/productBackButton"
        app:layout_constraintTop_toTopOf="@id/productBackButton"
        app:layout_constraintWidth_percent="0.4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="@id/productImage"
        app:layout_constraintStart_toStartOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productImage">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/productShortDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product short description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="2"
            android:maxLength="100"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productLongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productShortDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/productLongDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product main description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="3"
            android:maxLength="400"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:maxLength="6"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        android:textColor="@color/app_green"
        app:layout_constraintBottom_toBottomOf="@id/productDolarLabel"
        app:layout_constraintEnd_toStartOf="@id/productDolarLabel"
        app:layout_constraintTop_toTopOf="@id/productDolarLabel"
        tools:text="15.99" />

    <ImageButton
        android:id="@+id/productAddImageCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/oval_background"
        android:backgroundTint="@color/black"
        android:padding="4dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toTopOf="@id/productAddImageGalleryButton"
        app:layout_constraintStart_toEndOf="@id/productImage"
        app:layout_constraintTop_toTopOf="@id/productImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/productAddImageGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_background"
        android:backgroundTint="@color/black"
        android:padding="4dp"
        android:src="@drawable/ic_gallery"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="@id/productImage"
        app:layout_constraintStart_toStartOf="@id/productAddImageCameraButton"
        app:layout_constraintTop_toBottomOf="@id/productAddImageCameraButton" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productTitleBorder"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/productCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productLongDescription"/>

    <TextView
        android:id="@+id/productCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/productCategoryLabel"
        app:layout_constraintBottom_toBottomOf="@id/productCategoryLabel"
        app:layout_constraintStart_toEndOf="@id/productCategoryLabel"
        tools:text="Clothes" />

    <TextView
        android:id="@+id/productDateAddedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productCategory" />

    <TextView
        android:id="@+id/productDateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/productDateAddedLabel"
        app:layout_constraintTop_toTopOf="@id/productDateAddedLabel"
        app:layout_constraintBottom_toBottomOf="@id/productDateAddedLabel"
        tools:text="15.02.2020" />

    <TextView
        android:id="@+id/productDolarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:text="$"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productLongDescription" />

    <TextView
        android:id="@+id/productPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        app:layout_constraintTop_toTopOf="@id/productPrice"
        app:layout_constraintBottom_toBottomOf="@id/productPrice"
        app:layout_constraintEnd_toStartOf="@id/productPrice"/>

</androidx.constraintlayout.widget.ConstraintLayout>