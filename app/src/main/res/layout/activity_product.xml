<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/productAddImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/oval_background"
        android:backgroundTint="@color/black"
        android:padding="3dp"
        android:src="@drawable/ic_add_button"
        app:layout_constraintBottom_toBottomOf="@id/productImage"
        app:layout_constraintStart_toEndOf="@id/productImage"
        app:layout_constraintTop_toTopOf="@id/productImage" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/productImage"
        app:layout_constraintStart_toStartOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        tools:text="Product Name" />

    <EditText
        android:id="@+id/productShortDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:maxLength="100"
        android:maxLines="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productName"
        tools:text="This is the short description of the product. Limited only to 100 chars." />


    <EditText
        android:id="@+id/productLongDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:maxLength="400"
        android:maxLines="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productShortDescription"
        tools:text="This is the short description of the product. Limited to 400 chars." />

    <TextView
        android:id="@+id/productCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productLongDescription"
        tools:text="Clothes" />

    <TextView
        android:id="@+id/productDateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productCategory"
        tools:text="15.02.2020" />

    <TextView
        android:id="@+id/productDolarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="$"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@id/productLongDescription"
        app:layout_constraintTop_toBottomOf="@id/productLongDescription"/>

    <EditText
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:maxLength="6"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/productDolarLabel"
        app:layout_constraintEnd_toStartOf="@id/productDolarLabel"
        app:layout_constraintTop_toTopOf="@+id/productDolarLabel"
        tools:text="15.99"/>

    <Button
        android:id="@+id/productBackButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Back"
        android:textColor="@color/app_white"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toStartOf="@+id/productSaveNewDataButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDateAdded"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/productSaveNewDataButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="Save new changes"
        android:textColor="@color/app_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/productBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productBackButton"
        app:layout_constraintTop_toTopOf="@+id/productBackButton"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>