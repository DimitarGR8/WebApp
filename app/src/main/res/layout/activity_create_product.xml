<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createProductTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_create_new_product_screen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/createProductTitleBorder"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/app_grey_stroke"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/createProductTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/createProductAddButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_button"
        android:text="Create new product"
        android:textColor="@color/app_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createProductCategoryLabel"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.5" />

    <ImageButton
        android:id="@+id/createProductAddImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/oval_background"
        android:backgroundTint="@color/black"
        android:padding="4dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@id/createProductImage"
        app:layout_constraintStart_toEndOf="@id/createProductImage"
        app:layout_constraintTop_toTopOf="@id/createProductImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/createProductImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createProductTitleBorder"
        app:layout_constraintWidth_percent="0.5" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/createProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="@id/createProductImage"
        app:layout_constraintStart_toStartOf="@id/createProductImage"
        app:layout_constraintTop_toBottomOf="@id/createProductImage" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/createProductNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/createProductShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createProductName">

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/createProductShortDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product short description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="2"
            android:maxLength="100"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/createProductLongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/checkout_form_fields_background"
        android:paddingStart="20dp"
        android:paddingTop="11dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/black"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createProductShortDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/createProductLongDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@android:color/transparent"
            android:hint="Product main description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="3"
            android:maxLength="400"
            android:paddingTop="5dp"
            android:paddingBottom="11dp"
            android:textColor="@color/app_green"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/createProductCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="Clothes"
        android:textSize="16sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/createProductCategoryLabel"
        app:layout_constraintTop_toTopOf="@id/createProductCategoryLabel"
        app:layout_constraintBottom_toBottomOf="@id/createProductCategoryLabel"/>

    <TextView
        android:id="@+id/createProductCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/createProductLongDescription"
        app:layout_constraintTop_toBottomOf="@id/createProductLongDescription" />

    <TextView
        android:id="@+id/createProductPriceDolarSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/app_green"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/createProductLongDescription"
        app:layout_constraintTop_toBottomOf="@id/createProductLongDescription"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/createProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="00.00"
        android:maxLength="5"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:textColor="@color/app_green"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/createProductPriceDolarSign"
        app:layout_constraintBottom_toBottomOf="@id/createProductPriceDolarSign"
        app:layout_constraintTop_toTopOf="@id/createProductPriceDolarSign" />
</androidx.constraintlayout.widget.ConstraintLayout>